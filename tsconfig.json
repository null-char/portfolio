{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types", "src/types"]
}